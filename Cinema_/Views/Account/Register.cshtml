<link rel="stylesheet" href="~/css/AuthReg.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

<div class="container">
    <div class="row">
        <div class="padding">
            <div class="col-md-offset-3 col-md-6">
                <form class="form-horizontal" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                    <span class="heading">Реєстрація</span>
                    <div class="form-group">

                        <input type="text" asp-for="Email" class="form-control" placeholder="E-mail">

                        <i class="fa fa-user"></i>
                    </div>
                    <div class="form-group help">
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <i class="fa fa-lock"></i>
                    </div>
                    <div class="form-group help">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                        <i class="fa fa-lock"></i>
                    </div>
                    <div class="left">
                        <a asp-action="Login" asp-controller="Account" asp-anti-forgery="true"> Авторизація</a>
                    </div>
                    
                    <button type="submit" value="Реєстрація" class="btn btn-default left2">Зареєструватися</button>
                </form>
            </div>
        </div>
    </div><!-- /.row -->
</div><!-- /.container -->