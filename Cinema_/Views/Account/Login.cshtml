@model Cinema.ViewModels.LoginModel

<link rel="stylesheet" href="~/css/AuthReg.css"/>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

<div class="container">
    <div class="row">
        <div class="padding">
            <div class="col-md-offset-3 col-md-6">
                <form class="form-horizontal" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                    <span class="heading">Авторизація</span>
                    <div class="form-group">

                        <input type="text" asp-for="Email" class="form-control" placeholder="E-mail">

                        <i class="fa fa-user"></i>
                    </div>
                    <div class="form-group help">
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <i class="fa fa-lock"></i>
                        <a href="#" class="fa fa-question-circle"></a>
                    </div>
                    <div class="left">
                        <a  asp-action="Register" asp-controller="Account" asp-anti-forgery="true" > Зареєструватися</a>
                    </div>
                    
                    <div class="form-group">
                        <div class="main-checkbox">
                            <input type="checkbox" value="none" id="checkbox1" name="check" />
                            <label for="checkbox1"></label>
                        </div>

                        <span class="text">Запам'ятати</span>
                        <button type="submit" value="Войти" class="btn btn-default">Вхід</button>
                    </div>
                </form>
            </div>
        </div>
    </div><!-- /.row -->
</div><!-- /.container -->